{
  "name": "About Us Founder",
  "settings": [
    {
      "type": "richtext",
      "id": "founder_richtext",
      "label": "Founder Content"
    }
  ],
  "presets": [
    {
      "name": "About Us Founder"
    }
  ]
}
{% endschema %}
