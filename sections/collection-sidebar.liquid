  "settings": [
    {
      "type": "text",
      "id": "collection_heading",
      "label": "Filter Title",
      "default": "Category"
    },
    {
      "type": "collection_list",
      "id": "collections_list",
      "label": "Choose Collections"
    }
  ]
}
{% endschema %}
