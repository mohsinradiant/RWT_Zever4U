<style>
  .filter-block-body {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-in-out;
  }

  .dropdown-toggle {
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
  }

  /* When active, open dropdown */
  .dropdown-toggle.active::after {
    transform: rotate(180deg);
  }

  .dropdown-toggle.active + .filter-block-body {
    max-height: 500px; /* Adjust height as needed */
  } /* Style the track */
  #price-slider {
    -webkit-appearance: none;
    width: 100%;
    height: 5px;
    background: #cb8161; /* Track color */
    border-radius: 5px;
    outline: none;
    transition: all 0.3s;
  }

  /* Style the thumb (the draggable part) */
  #price-slider::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    width: 15px;
    height: 15px;
    background: #cb8161; /* Change this to your accent color */
    border-radius: 50%;
    cursor: pointer;
  }

  /* Mozilla (Firefox) */
  #price-slider::-moz-range-thumb {
    width: 15px;
    height: 15px;
    background: #cb8161;
    border-radius: 50%;
    cursor: pointer;
  }

  /* Change track color on hover */
  #price-slider:hover {
    background: #cb8161;
  }
</style>

<div class="filter-bg">
  <aside class="sidebar-col">
    <div class="filters-sidebar">
      <h4 class="filter-header h4 ">Filters</h4>
      <div class="filter-body">
        <!-- Price Range Filter -->
        <div class="filter-block">
          <div class="filter-block-title h5 dropdown-toggle">Price</div>
          <div class="filter-block-body">
            <input type="range" id="price-slider" min="0" step="100">
            <span id="price-value">₹0 - ₹0</span>
            <div id="price-buttons" class="price-buttons"></div>
          </div>
        </div>

        <!-- Gender Filter -->
        <div class="filter-block" id="gender-filter-section">
          <div class="filter-block-title h5 dropdown-toggle">Gender</div>
          <div class="filter-block-body" id="gender-filters"></div>
        </div>

        <!-- Category Filter -->
        <div class="filter-block" id="category-filter-section">
          <div class="filter-block-title h5 dropdown-toggle">Categories</div>
          <div class="filter-block-body" id="category-filters"></div>
        </div>
      </div>
    </div>
  </aside>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const priceSlider = document.getElementById('price-slider');
    const priceValue = document.getElementById('price-value');
    const genderFilters = document.querySelectorAll('.gender-filter');
    const categoryFilters = document.querySelectorAll('.category-filter');

    function updateFilters() {
      let url = new URL(window.location.href);

      // Get the selected price range
      const maxPrice = priceSlider.value;
      url.searchParams.set('price_max', maxPrice);

      // Get selected gender filters
      const selectedGenders = [...genderFilters].filter((cb) => cb.checked).map((cb) => cb.value);
      if (selectedGenders.length) {
        url.searchParams.set('gender', selectedGenders.join(','));
      } else {
        url.searchParams.delete('gender');
      }

      // Get selected category filters
      const selectedCategories = [...categoryFilters].filter((cb) => cb.checked).map((cb) => cb.value);
      if (selectedCategories.length) {
        url.searchParams.set('category', selectedCategories.join(','));
      } else {
        url.searchParams.delete('category');
      }

      // Reload the page with updated filter parameters
      window.location.href = url.toString();
    }

    // Attach event listeners
    priceSlider.addEventListener('input', updateFilters);
    genderFilters.forEach((cb) => cb.addEventListener('change', updateFilters));
    categoryFilters.forEach((cb) => cb.addEventListener('change', updateFilters));
  });
</script>

<style>
  .price-buttons {
    margin-top: 10px;
    display: flex;
    flex-wrap: wrap;
    gap: 5px;
  }
  .price-button {
    background: #f0f0f0;
    border: 1px solid #ccc;
    padding: 5px 10px;
    cursor: pointer;
    border-radius: 5px;
    transition: all 0.3s;
  }
  .price-button:hover {
    background: #ddd;
  }
</style>

