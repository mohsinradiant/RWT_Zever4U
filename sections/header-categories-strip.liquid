<div class="page-width category-circles-strip-container">
  {% for block in section.blocks %}
    <a href="{{ block.settings.link }}">
      <img src="{{ block.settings.image |  image_url  }}">
    </a>
  {% endfor %}
</div>
<style>
  .category-circles-strip-container {
    display: flex;
    gap: 20px;
    justify-content: center;
    align-items: start;
    overflow-x: auto;
    margin-bottom: 15px;
    margin-top: 5px;
  }
  .category-circles-strip-container a {
    width: 60px;
    cursor: pointer;
    height: auto;
  }
  .category-circles-strip-container a img:hover {
    opacity: 0.8;
  }
  .category-circles-strip-container a img {
    width: 100%;
    transition: all ease-in.3s;
    height: auto;
  }
  @media (max-width: 756px) {
    .category-circles-strip-container a {
      min-width: 80px;
    }
    .category-circles-strip-container {
      justify-content: start;
    }
  }
</style>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
<script>
  function startAutoScroll() {
    const container = document.querySelector('.category-circles-strip-container');
    if (!container) return;

    let links = Array.from(container.children);

    function checkScreenSize() {
      if (window.innerWidth < 756) {
        if (!container.dataset.scrolling) {
          container.dataset.scrolling = 'true'; // Prevent multiple GSAP instances

          gsap.set(links, { xPercent: 100 }); // Start elements offscreen right

          gsap.to(links, {
            xPercent: -100 * links.length, // Move elements left
            duration: 10, // Adjust speed
            ease: 'linear',
            repeat: -1, // Infinite loop
            modifiers: {
              xPercent: gsap.utils.wrap(-100 * links.length, 100), // Wrap items seamlessly
            },
          });
        }
      } else {
        gsap.killTweensOf(links); // Stop GSAP on larger screens
        delete container.dataset.scrolling;
      }
    }

    checkScreenSize();
    window.addEventListener('resize', checkScreenSize);
  }

  document.addEventListener('DOMContentLoaded', startAutoScroll);
</script>

{% schema %}
{
  "name": "Category Circles Strip",
  "settings": [],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Category Circles Strip"
    }
  ]
}
{% endschema %}
