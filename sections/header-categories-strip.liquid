<div class="page-width category-circles-strip-container">
  {% for block in section.blocks %}
    <a href="{{ block.settings.link }}">
      <img src="{{ block.settings.image |  image_url  }}">
    </a>
  {% endfor %}
</div>
<style>
  .category-circles-strip-container {
    display: flex;
    gap: 20px;
    justify-content: center;
    align-items: start;
    overflow-x: auto;
    margin-bottom: 15px;
    margin-top: 5px;
  }
  .category-circles-strip-container a {
    width: 60px;
    cursor: pointer;
    height: auto;
  }
  .category-circles-strip-container a img:hover {
    opacity: 0.8;
  }
  .category-circles-strip-container a img {
    width: 100%;
    transition: all ease-in.3s;
    height: auto;
  }
  @media (max-width: 756px) {
    .category-circles-strip-container a {
      min-width: 80px;
    }
    .category-circles-strip-container {
      justify-content: start;
    }
  }
</style>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
<script>
  function startAutoScroll() {
    const container = document.querySelector('.category-circles-strip-container');
    if (!container) return;

    let links = Array.from(container.children);
    let totalWidth = links.reduce((sum, link) => sum + link.offsetWidth, 0);

    function checkScreenSize() {
      if (window.innerWidth < 756) {
        if (!container.dataset.scrolling) {
          container.dataset.scrolling = 'true'; // Prevent multiple instances

          // Duplicate elements multiple times to create a continuous effect
          while (container.scrollWidth < window.innerWidth * 2) {
            links.forEach((link) => {
              let clone = link.cloneNode(true);
              container.appendChild(clone);
            });
          }

          let allLinks = Array.from(container.children);

          gsap.to(allLinks, {
            x: `-${totalWidth}px`, // Move all elements left by total width
            duration: 20, // Slower scrolling (previously 10s, now 20s)
            ease: 'linear',
            repeat: -1, // Infinite loop
            modifiers: {
              x: gsap.utils.wrap(0, totalWidth), // Seamless looping
            },
          });
        }
      } else {
        gsap.killTweensOf(container.children); // Stop GSAP on larger screens
        container.dataset.scrolling = ''; // Allow re-init if resized back
      }
    }

    checkScreenSize();
    window.addEventListener('resize', checkScreenSize);
  }

  document.addEventListener('DOMContentLoaded', startAutoScroll);
</script>

{% schema %}
{
  "name": "Category Circles Strip",
  "settings": [],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Category Circles Strip"
    }
  ]
}
{% endschema %}
